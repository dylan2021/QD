<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/task_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="21dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/taskStatu_tv"
            android:layout_width="47dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:background="@drawable/home_task_state_bg"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/fs12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/taskStatu_tv"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="#ff3c3c3c"
            android:textSize="@dimen/fs15" />

        <TextView
            android:id="@+id/taskTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:gravity="right"
            android:textColor="#ff9b9b9b"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>
