<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/official_repository"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="正式库" />

            <Button
                android:id="@+id/test_Library"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="测试库" />

            <Button
                android:id="@+id/development_library"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="开发库" />

            <Button
                android:id="@+id/pre_online"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="预上线" />

        </LinearLayout>

        <EditText
            android:id="@+id/ip_edit"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:hint="输入IP地址,例如:http://192.168.30.149:80/"
            android:textSize="15sp" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_blue_shape"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
