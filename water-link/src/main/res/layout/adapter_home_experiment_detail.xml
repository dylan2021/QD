<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/point_name_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_35"
                android:background="@color/color_eee"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_left_13dp"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_left_13dp"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/margin_left_13dp"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    style="@style/a5a5a5_sp15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采集时间:" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text=""
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="数值:"
                    style="@style/a5a5a5_sp15"
              />

                <EditText
                    android:id="@+id/value"
                    style="@style/fault_equipment_repair_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@null"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/color_21"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View style="@style/under_line" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

