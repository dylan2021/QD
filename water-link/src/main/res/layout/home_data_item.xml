<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="13dp"
    android:background="@drawable/kpi_shape"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingLeft="6dip"
        android:paddingRight="6dip">

        <TextView
            android:id="@+id/value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#ff3c3c3c"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/data_unti_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="#ff3c3c3c"
            android:textSize="9sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:singleLine="true"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/fs13" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#F3F3F3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="6dip"
        android:paddingRight="6dip">

        <ImageView
            android:id="@+id/home_location_iv"
            android:layout_width="13dp"
            android:layout_height="15dp"
            android:background="@mipmap/home_locationgrey" />

        <TextView
            android:id="@+id/home_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="#9B9B9B"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>
