<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/home_bar_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="back">

            <ImageButton
                android:id="@+id/comon_back_v"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_backwhite_two"
                android:cropToPadding="true"
                android:onClick="back"
                android:padding="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/comon_back_tv"
            android:layout_width="120dip"
            android:layout_height="75dip"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:onClick="back"
            android:paddingLeft="38dp"
            android:paddingTop="7dp"
            android:paddingRight="35dip"
            android:paddingBottom="7dp"
            android:text="@string/back"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/title_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:ellipsize="none"
            android:maxEms="8"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/common_complete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/base_complete"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </RelativeLayout>
</LinearLayout>
