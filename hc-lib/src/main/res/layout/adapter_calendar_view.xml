<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/is_today_ll"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/ic_circular"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/red_dot_v"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/ic_red_dot" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-2dp"
                android:gravity="center"
                android:text="01"
                android:textColor="#ff9b9b9b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/today_tv"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="今天"
                android:textColor="#ff5e5e5e"
                android:textSize="6sp" />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-3dip"
        android:layout_marginRight="4dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timer_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lib_blue_oval"
            android:gravity="center"
            android:text="12"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:id="@+id/alarm_count_tv"
            android:background="@drawable/lib_orange_oval"
            android:gravity="center"
            android:text="12"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />
    </LinearLayout>

</LinearLayout>
