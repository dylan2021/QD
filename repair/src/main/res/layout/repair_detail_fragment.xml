<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/title_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="@string/repair_fault_equipment" />

                <TextView
                    android:id="@+id/repair_equipment_tv"
                    style="@style/repair_manager_details_tv2" />
            </LinearLayout>

            <View style="@style/repair_manager_hint" />

            <LinearLayout style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="@string/repair_equipment_code" />

                <TextView
                    android:id="@+id/repair_equipment_code_tv"
                    style="@style/repair_manager_details_tv2" />
            </LinearLayout>

            <View style="@style/repair_manager_hint" />

            <LinearLayout style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="@string/repair_process_postion" />

                <TextView
                    android:id="@+id/repair_process_position_tv"
                    style="@style/repair_manager_details_tv2" />
            </LinearLayout>

            <View style="@style/repair_manager_hint" />

            <LinearLayout style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="@string/repair_fault_reason" />

                <TextView
                    android:id="@+id/repair_fault_reason_tv"
                    style="@style/repair_manager_details_tv2" />
            </LinearLayout>

            <View style="@style/repair_manager_hint" />

            <LinearLayout style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="@string/repair_degree" />

                <TextView
                    android:id="@+id/repair_degree_tv"
                    style="@style/repair_manager_details_tv2" />
            </LinearLayout>

            <View style="@style/repair_manager_hint" />

            <LinearLayout style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="所属组织" />


                <TextView
                    android:id="@+id/repair_report_person_org_tv"
                    style="@style/repair_manager_details_tv2" />
            </LinearLayout>

            <View style="@style/repair_manager_hint" />

            <LinearLayout style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="报修人员" />


                <TextView
                    android:id="@+id/repair_report_person_tv"
                    style="@style/repair_manager_details_tv2" />
            </LinearLayout>

            <View style="@style/repair_manager_hint" />

            <LinearLayout style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="@string/repair_report_date" />

                <TextView
                    android:id="@+id/repair_report_date_tv"
                    style="@style/repair_manager_details_tv2" />
            </LinearLayout>


            <View style="@style/repair_manager_hint" />

            <LinearLayout
                android:id="@+id/repair_look_remark_ll"
                style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="@string/repair_look_remark"
                    android:textSize="@dimen/fs16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="查看描述"
                    android:textColor="@color/color_underline_bg"
                    android:textSize="@dimen/fs14" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_equiment_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/repair_look_fault_ll"
                style="@style/repair_manager_details_ll">

                <TextView
                    style="@style/repair_manager_details_tv"
                    android:text="@string/repair_look_fault"
                    android:textSize="@dimen/fs16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/repair_look_remark"
                    android:textColor="@color/color_underline_bg"
                    android:textSize="@dimen/fs14"
                    android:visibility="invisible" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_equiment_right" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/repair_processing_ll"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="#F6FAFB"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/repair_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="待审核"
                        android:textColor="@color/color_task_ft"
                        android:textSize="@dimen/fs16" />

                    <TextView
                        android:id="@+id/repair_excute_person_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/color_task_ft"
                        android:textSize="@dimen/fs16" />

                    <TextView
                        android:id="@+id/repair_excute_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/color_task_ft"
                        android:textSize="@dimen/fs16" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/repair_state_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="40dp" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_equiment_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spare_parts_application_tv"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/repair_details_shape"
            android:gravity="center"
            android:text="备件申请"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/repair_processing_result_tv"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/repair_details_shape"
            android:gravity="center"
            android:text="@string/repair_post_repair_result"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
