<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/title_common2" />

    <TextView
        android:id="@+id/repair_remark_label_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/repair_remark"
        android:textColor="@color/color_task_ft"
        android:textSize="@dimen/fs15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/repair_post_remarks_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/repair_remark_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:maxLines="99999"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/color_messge_ft"
            android:textSize="@dimen/fs14" />
    </LinearLayout>
</LinearLayout>
