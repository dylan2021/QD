<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scree_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="100dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="25dip"
        android:layout_marginBottom="25dip"
        android:text="时间"
        android:textColor="#888888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/repair_left_arrow_iv"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="8dip"
            android:background="@mipmap/patrol_left_arrow_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:background="@color/color_green"
            android:paddingLeft="8dip"
            android:paddingTop="4dip"
            android:paddingRight="8dip"
            android:paddingBottom="4dip"
            android:text="月"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/repair_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:text="2.11---2.17"
            android:textColor="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/repair_right_arrow_iv"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginRight="8dip"
                android:background="@mipmap/patrol_right_arrow_blue" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/repair_bg_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repair_create_person" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/repair_create_person_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repair_excute_person" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/repair_excute_person_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repair_state" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/repair_state_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reset_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EDF9FD"
            android:gravity="center"
            android:text="@string/equiment_reset"
            android:textColor="@color/color_title_blue_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/complete_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_title_blue_bg"
            android:gravity="center"
            android:text="@string/equiment_done"
            android:textColor="@color/color_white"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>