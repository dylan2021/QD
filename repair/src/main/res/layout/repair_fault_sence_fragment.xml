<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_common" />

    <TextView
        android:id="@+id/repair_remark_label_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hc_margin"
        android:layout_marginTop="15dp"
        android:text="缺陷描述"
        android:textColor="@color/color_task_ft"
        android:textSize="@dimen/fs15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:layout_marginLeft="@dimen/hc_margin"
        android:background="@drawable/repair_post_remarks_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/repair_remark_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="无内容"
            android:maxLines="99999"
            android:scrollbars="vertical"
            android:textColor="@color/color_messge_ft"
            android:textSize="@dimen/fs14" />

    </LinearLayout>

    <TextView
        android:id="@+id/scene_tv"
        style="@style/repair_manager_details_tv"
        android:layout_marginLeft="@dimen/hc_margin"
        android:text="现场记录" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hc_margin"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/no_pic_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="暂无现场记录图片"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/fs16"
        android:visibility="gone" />

</LinearLayout>
