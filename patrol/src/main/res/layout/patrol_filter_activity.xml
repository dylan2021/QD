<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="100dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="时间"
        android:textColor="#ff3c3c3c"
        android:textSize="17sp" />

    <com.haocang.base.picker.PickerView
        android:id="@+id/pickerview"
        android:layout_width="match_parent"
        android:layout_height="140dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="执行人"
            android:textColor="#ff3c3c3c"
            android:textSize="17sp" />

        <FrameLayout
            android:id="@+id/fl_bg"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/patrol_filter_shape">

            <TextView
                android:id="@+id/all_person_tv"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="所有人"
                android:textColor="@color/color_blank"
                android:textSize="@dimen/fs14" />

            <View
                android:id="@+id/scree_v"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:background="@mipmap/patrol_filter_delete"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>


    <com.haocang.patrol.manage.widgets.LabelView
        android:id="@+id/patrol_distribution_lableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.haocang.patrol.manage.widgets.LabelView
        android:id="@+id/patrol_task_lableview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.haocang.patrol.manage.widgets.LabelView
        android:id="@+id/patrol_state_lableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/patrol_reset_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EDF9FD"
            android:gravity="center"
            android:text="@string/patrol_reset"
            android:textColor="@color/color_title_blue_bg"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/patrol_complete_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_title_blue_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>