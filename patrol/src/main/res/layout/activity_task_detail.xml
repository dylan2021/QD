<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_common" />

    <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
        android:id="@+id/pulltorefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bg_ll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:background="@color/color_gray5"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:text="任务信息"
                android:textColor="@color/mainColor"
                android:textSize="26px"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/task_detail_tv_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8px"
                    android:paddingLeft="20px"
                    android:textSize="26px"
                    android:text="@string/task_detail_title_str"
                    android:textColor="#212121"
                  />

                <TextView
                    android:id="@+id/task_detail_tv_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="26px"
                    android:lineSpacingExtra="8px"
                    android:text=""
                    android:textColor="#999999" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:background="@color/color_gray5"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:text="巡检点信息"
                android:textColor="@color/mainColor"
                android:textSize="26px"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>


</RelativeLayout>
