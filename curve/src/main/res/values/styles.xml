<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="curve_share_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@color/color_gray</item>
    </style>

    <style name="curve_share_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_gray2</item>
    </style>

    <style name="curve_share_tv2">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/color_gray2</item>
    </style>

    <style name="curve_share_iv">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="curve_share_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">right</item>
    </style>
</resources>
