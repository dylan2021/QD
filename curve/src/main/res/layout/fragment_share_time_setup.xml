<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_common" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享有效时限"
            android:textColor="@color/color_blank"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_starTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_blank3"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="至"
                android:textColor="@color/color_blank2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/show_endTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_blank3"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/curve_share_bg" />

    <LinearLayout
        android:id="@+id/hour_ll"
        style="@style/curve_share_ll">

        <ImageView
            android:id="@+id/hour_iv"
            style="@style/curve_share_iv"
            android:background="@mipmap/selected_icon"
            android:visibility="gone" />

        <TextView
            style="@style/curve_share_tv2"
            android:text="1小时" />
    </LinearLayout>

    <View style="@style/curve_share_bg" />

    <LinearLayout
        android:id="@+id/day_ll"
        style="@style/curve_share_ll">

        <ImageView
            android:id="@+id/day_iv"
            style="@style/curve_share_iv"
            android:background="@mipmap/selected_icon"
            android:visibility="gone" />

        <TextView
            style="@style/curve_share_tv2"
            android:text="1 天" />
    </LinearLayout>

    <View style="@style/curve_share_bg" />

    <LinearLayout
        android:id="@+id/week_ll"
        style="@style/curve_share_ll">

        <ImageView
            android:id="@+id/week_iv"
            style="@style/curve_share_iv"
            android:background="@mipmap/selected_icon"
            android:visibility="gone" />

        <TextView
            style="@style/curve_share_tv2"
            android:text="1 周" />
    </LinearLayout>

    <View style="@style/curve_share_bg" />

    <LinearLayout
        android:id="@+id/more_time_ll"
        style="@style/curve_share_ll"
        android:visibility="gone">


        <TextView
            style="@style/curve_share_tv"
            android:layout_marginRight="50dp"
            android:text="更多时效设置"
            android:textColor="@color/color_blank" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_equiment_right" />
    </LinearLayout>

    <View
        style="@style/curve_share_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/more_time_setup_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/startTime_ll"
            style="@style/curve_share_ll">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开始时间"
                android:textColor="@color/color_blank"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/startTime_tv"
                style="@style/curve_share_tv"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_blank" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_equiment_right" />
        </LinearLayout>

        <View style="@style/curve_share_bg" />

        <LinearLayout
            android:id="@+id/endTime_ll"
            style="@style/curve_share_ll">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="结束时间"
                android:textColor="@color/color_blank"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/endTime_tv"
                style="@style/curve_share_tv"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_blank" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_equiment_right" />
        </LinearLayout>

        <View style="@style/curve_share_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/submit_tv"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="40dp"
        android:background="@color/color_blue"
        android:gravity="center"
        android:text="确  定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
