<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_common2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/curve_signle_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_transparent"
            android:gravity="center"
            android:text="@string/curve_signle"
            android:textColor="@color/color_blank2"
            android:textSize="@dimen/fs14" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dip"
            android:background="@color/color_underline"
            android:paddingTop="2dip"
            android:paddingBottom="2dip" />

        <Button
            android:id="@+id/curve_muti_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_transparent"
            android:gravity="center"
            android:text="@string/curve_muti"
            android:textColor="@color/color_blank2"
            android:textSize="@dimen/fs14" />


    </LinearLayout>

    <View
        android:id="@+id/bg_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_underline" />


    <FrameLayout
        android:id="@+id/patrol_container_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
