<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_fault_rectangle_big"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fault_type_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设备缺陷"
                    android:textColor="#ff0cabdf"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/statu_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#fff5a623"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备："
                    android:textColor="#ff3c3c3c"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/equi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff3c3c3c"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fault_severity_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ff3c3c3c"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/person_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#ff3c3c3c"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/fault_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff3c3c3c"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <com.haocang.fault.list.utils.FaultRoundArImageView
        android:id="@+id/fault_iv"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp" />

    <ImageView
        android:id="@+id/follow_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_fault_blue_stars"
        android:padding="7dp" />

    <LinearLayout
        android:id="@+id/assignment_ll"
        android:layout_width="82dp"
        android:layout_height="37dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/icon_fault_circle"
        android:gravity="center">

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="分派"
            android:textColor="#ff0cabdf"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/icon_fault_right_arrow" />
    </LinearLayout>
</FrameLayout>
